                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </nav>


    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden" role="dialog" aria-modal="true">
        <!-- Background backdrop, show/hide based on slide-over state. -->
        <div class="fixed inset-0 z-10"></div>
        <div
            class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
            style="background-color: rgb(15 23 42);">
            <div class="flex items-center justify-between">
                <a href="{{ path('default_entry') }}" class="-m-1.5 p-1.5">
                    <img src="{{ asset('build/images/OrbitLogo_500.png') }}" class="h-14" alt="Orbit Logo">
                </a>
                {#<a class="leading-6 text-red-500 mr-3 animate-bounce" href="https://github.com/jameskitt616/orbit/#updating"> #}
                {#    {{ 'common.update_available'|trans }} #}
                {#</a> #}
                <button type="button" class="-m-2.5 rounded-md p-2.5 text-white">
                    <i class="fa-solid fa-xmark fa-lg"></i>
                </button>
            </div>
            <div class="mt-6 flow-root">
                <div class="-my-6 divide-y divide-gray-500/10">
                    <div class="space-y-2 py-6">
                        <div class="-mx-3">
                            <button type="button"
                                    class="flex w-full items-center justify-between rounded-lg py-2 pl-3 pr-3.5 text-base font-semibold leading-7 bg-indigo-500 hover:bg-indigo-400"
                                    aria-controls="disclosure-1" aria-expanded="false">
                                {{ 'nav.live'|trans }} <i class="fas fa-chevron-down"></i>
                                <!--
                                  Expand/collapse icon, toggle classes based on menu open state.

                                  Open: "rotate-180", Closed: ""
                                -->
                            </button>
                            <!-- 'Live' sub-menu, show/hide based on menu state. -->
                            <div class="mt-2 space-y-2" id="disclosure-1">
                                <a href="{{ path('transcode_list') }}"
                                   class="block rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 ml-5 text-gray-900 bg-indigo-500 hover:bg-indigo-400">
                                    {{ 'live.streams'|trans }}
                                </a>
                            </div>
                        </div>
                        <div class="-mx-3">
                            <button type="button"
                                    class="flex w-full items-center justify-between rounded-lg py-2 pl-3 pr-3.5 text-base font-semibold leading-7 bg-indigo-500 hover:bg-indigo-400"
