                    {{ 'settings.system.settings'|trans }}
                </a>
            </div>
            <div class="border-b pb-2 mb-1">
                <a href="{{ path('settings_system_information') }}">
                    {{ 'settings.users'|trans }}
                </a>
            </div>
        {% endif %}
