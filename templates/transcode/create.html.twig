{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mt-5 justify-between mx-auto flex">
        {% include 'transcode/nav.html.twig' %}
        <div class="w-3/4 p-4 m-2 border-l">


            {{ form_start(form) }}
            <div>
                <div class="px-4 sm:px-0">
                    <h3 class="text-base font-semibold leading-7 text-gray-500">
                        {{ 'live.stream.transcoding.configuration'|trans }}
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">
                        {{ 'live.stream.transcoding.configuration.description'|trans }}
                    </p>
                </div>
                <div class="mt-6 border-t border-gray-100">
                    <div class="divide-y divide-gray-100">
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500">
                                {{ 'live.stream.source'|trans }}
                            </div>
                            <div class="mt-1 text-sm leading-6 text-white sm:col-span-2 sm:mt-0">
                                {{ file.fileName }}
                            </div>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500">
                                {{ 'live.stream.audio_track'|trans }}
                            </div>
                            <div class="mt-1 text-sm leading-6 text-white sm:col-span-2 sm:mt-0">
                                {{ form_row(form.videoPropertyAudio, {
                                    attr: {
                                        'class': 'rounded-md bg-indigo-200 text-black sm:p-1 sm:text-sm sm:leading-6',
                                    }
                                }) }}
                                (Not implemented yet! Has no effect)
                            </div>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500">
                                {{ 'live.stream.subtitle_track'|trans }}
                            </div>
                            <div class="mt-1 text-sm leading-6 text-white sm:col-span-2 sm:mt-0">
                                {{ form_row(form.videoPropertySubtitle, {
                                    attr: {
                                        'class': 'rounded-md bg-indigo-200 text-black sm:p-1 sm:text-sm sm:leading-6',
                                    }
                                }) }}
                                (Not implemented yet! Has no effect)
                            </div>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500">
                                {{ 'live.stream.format'|trans }}
                            </div>
                            <div class="mt-1 text-sm leading-6 text-white sm:col-span-2 sm:mt-0">
                                {{ form_row(form.format, {
                                    attr: {
                                        'class': 'rounded-md bg-indigo-200 text-black sm:p-1 sm:text-sm sm:leading-6',
                                    }
                                }) }}
                            </div>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500">
                                {{ 'live.stream.representations'|trans }}
                            </div>
                            <div class="mt-2 text-sm text-white sm:col-span-2 sm:mt-0">
                                {{ form_row(form.representations) }}
                            </div>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                            <div class="text-sm font-medium leading-6 text-gray-500"></div>
                            <div class="mt-2 text-sm text-gray-500 sm:col-span-2 sm:mt-0">
                                <button type="submit"
                                        class="justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                    {{ 'common.save'|trans }}
                                </button>
                                <button type="button" onclick="window.location='{{ path('transcode_list') }}';"
                                        class="justify-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                    {{ 'common.cancel'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
