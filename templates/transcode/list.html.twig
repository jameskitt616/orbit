{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mt-5 justify-between mx-auto flex">
        {% include 'transcode/nav.html.twig' %}
        <div class="w-3/4 p-4 m-2 border-l">
            <div class="flex mb-4">
                <div class="w-2/3">
                    {#                //TODO: check if the title is true. put message into translation file #}
                    <h1>{{ 'live.streams.current_streams'|trans }} <i
                            title="Live Streams do not sync in VRChat, if someone joins the lobby they will start from the beginning"
                            class="fas fa-circle-info"></i></h1>
                </div>
                <div class="w-1/3 flex justify-end">
                    <a href="{{ path('transcode_create') }}" title="{{ 'live.streams.create'|trans }}"
                       class="justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>

            <div class="rounded bg-blue-200 p-1 text-blue-600 mb-2">
                <i class="fas fa-circle-info"></i>
                Livestreams do not work like conventional Livestreams, it's more like live transcoding and being
                able to watch while it's transcoding.
            </div>

            <div>
                <label>
                    <input type="text" autofocus placeholder="{{ 'common.search'|trans }}"
                           class="block w-full rounded-md border-0 py-1.5 px-1 mb-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </label>
            </div>
            <div class="max-h-96 overflow-auto border p-2 rounded">
                {% for transcode in transcodes %}
                    <a href="{{ path('transcode_show', {'transcode': transcode.id}) }}"
                       class="flex p-2 {{ loop.index != 1 ? 'mt-1' }} cursor-pointer border rounded hover:bg-indigo-400">
                        <div class="w-full">
                            <p class="text-sm font-semibold"
                               title="{{ transcode.fileName }}">{{ transcode.fileName }}</p>
                            <div class="mt-2 text-sm text-gray-500 sm:col-span-2 sm:mt-0">
                                <span
                                    class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">{{ transcode.transcodeFormat }}</span>
                                    {% set backgroundColors = ['bg-red-50', 'bg-yellow-50', 'bg-green-50', 'bg-blue-50', 'bg-indigo-50', 'bg-purple-50', 'bg-pink-50'] %}
                                {% set testColors = ['text-red-700', 'text-yellow-800', 'text-green-700', 'text-blue-700', 'text-indigo-700', 'text-purple-700', 'text-pink-700'] %}
                                {% set ringColors = ['ring-red-600', 'ring-yellow-800', 'ring-green-700', 'ring-blue-700', 'ring-indigo-700', 'ring-purple-700', 'ring-pink-700'] %}
                                {% for representation in transcode.representations %}
                                <span
                                    class="inline-flex items-center rounded-md {{ backgroundColors[loop.index] }} px-2 py-1 text-xs font-medium {{ testColors[loop.index] }} ring-1 ring-inset {{ ringColors[loop.index] }}/10">{{ representation.resolutionHeight }}p</span>
                                {% endfor %}
                            </div>
                            <div class="mt-2 text-sm text-white w-full">
                                <div class="rounded-lg bg-green-400 w-full" title="{{ 'live.stream.transcoding_progress'|trans }}">
                                    <div style="width: 50%"
                                         class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-lg text-center p-1">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('transcoding') }}
{% endblock %}
