{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mt-5 justify-between mx-auto flex">
        <div class="w-1/4 p-3 mt-8">
            <div class="rounded border font-semibold p-1 hover:bg-gray-600 cursor-pointer mt-1">
                Transcodes (HLS)
            </div>
            <div class="rounded border font-semibold p-1 hover:bg-gray-600 cursor-pointer mt-1">
                Transcodes (DASH)
            </div>
        </div>
        <div class="w-3/4 p-4 m-2 border-l">
            <h1>Select video to transcode</h1>
            <div class="max-h-96 overflow-auto">
                {% for video in videos %}
                    <div class="flex justify-between gap-x-6 p-2 {{ loop.index != 1 ? 'mt-1' }} cursor-pointer border rounded hover:bg-gray-600">
                        <div class="flex gap-x-4">
                            <div class="min-w-0 flex-auto">
                                <p class="text-sm font-semibold leading-6" title="{{ video.fileName }}">{{ video.fileName }}</p>
                                <p class="truncate text-xs leading-5 text-gray-500" title="{{ video.getDisplayFilePath }}">{{ video.getDisplayFilePath }}</p>
                            </div>
                        </div>
                        <div class="hidden sm:flex sm:flex-col sm:items-end">
                            <p class="text-sm leading-6">{{ video.getFileSize }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
