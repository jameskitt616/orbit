{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl items-center justify-between mx-auto">
        <div class=" mt-10 mr-20 p-3 rounded border">
            <h1>Videos</h1>
            <ul role="list">
                {% for video in videos %}
                    <li class="flex justify-between gap-x-6 p-2 my-2 cursor-pointer border rounded hover:bg-gray-500">
                        <div class="flex gap-x-4">
                            <div class="min-w-0 flex-auto">
                                <p class="text-sm font-semibold leading-6">{{ video.fileName }}</p>
                                <p class="mt-1 truncate text-xs leading-5 text-gray-500">{{ video.getDisplayFilePath }}</p>
                            </div>
                        </div>
                        <div class="hidden sm:flex sm:flex-col sm:items-end">
                            <p class="text-sm leading-6">{{ video.getFileSize }}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
