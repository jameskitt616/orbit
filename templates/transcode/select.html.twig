{% extends 'base.html.twig' %}

{% block body %}

    <div class="p-3 rounded border">
        <ul role="list" class="divide-y divide-gray-100">
            {% for video in videos %}
                <li class="flex justify-between gap-x-6 py-5">
                    <div class="flex gap-x-4">
{#                        <i class="h-12 w-12 fas fa-video"></i>#}
                        <div class="min-w-0 flex-auto">
                            <p class="text-sm font-semibold leading-6 text-white">{{ video.fileName }}</p>
                            <p class="mt-1 truncate text-xs leading-5 text-gray-500">{{ video.getDisplayFilePath }}</p>
                        </div>
                    </div>
                    <div class="hidden sm:flex sm:flex-col sm:items-end">
                        <p class="text-sm leading-6 text-white">{{ video.getFileSize }}</p>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
